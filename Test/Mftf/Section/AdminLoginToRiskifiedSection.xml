<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminLoginToRiskifiedSection">
        <element name="RiskifiedGeneralTab" type="text" selector="a#riskified_riskified_general-head" timeout="30"/>
        <element name="RiskifiedApiTab" type="text" selector="a#riskified_riskified-head" timeout="30"/>
        <element name="RiskifiedShopDomain" type="text" selector="input#riskified_riskified_domain" timeout="30"/>
        <element name="RiskifiedToken" type="text" selector="input#riskified_riskified_key" timeout="30"/>
        <element name="RiskifiedEnv" type="select" selector="//select[@id='riskified_riskified_env']" timeout="30"/>
        <element name="RiskifiedEnabled" type="select" selector="//select[@id='riskified_riskified_general_enabled']" timeout="30"/>

        <element name="SaveConfiguration" type="button" selector="//span[text()='Save Config']" timeout="30"/>
        <element name="SavedConfiguration" type="button" selector="//div[text()='You saved the configuration.']" timeout="30"/>
    </section>
</sections>
