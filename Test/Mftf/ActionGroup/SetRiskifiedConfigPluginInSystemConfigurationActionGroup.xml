<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SetRiskifiedConfigPluginInSystemConfiguration">
        <amOnPage url="admin/admin/system_config/edit/section/riskified" stepKey="navigateToDeciderConfigurationOnDefaultStoreView" />
        <fillField userInput="{{_CREDS.riskified/store_domain}}" selector="{{AdminLoginToRiskifiedSection.RiskifiedShopDomain}}" stepKey="fillAppKey"/>
        <fillField userInput="{{_CREDS.riskified/store_key}}" selector="{{AdminLoginToRiskifiedSection.RiskifiedToken}}" stepKey="fillSecret"/>
        <click selector="{{AdminLoginToRiskifiedSection.SaveConfiguration}}" stepKey="ClickOnSaveConfig"/>
        <waitForPageLoad stepKey="waitForSaveConfig"/>

        <seeElement selector="{{AdminLoginToRiskifiedSection.SavedConfiguration}}" stepKey="checkConfigurationSaved"/>
    </actionGroup>
</actionGroups>


