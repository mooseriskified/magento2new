<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="EnableRiskifiedPluginInSystemConfiguration">
        <selectOption userInput="1" selector="{{AdminLoginToRiskifiedSection.RiskifiedEnabled}}" stepKey="setRiskifiedAsActive"/>
        <seeOptionIsSelected userInput="Yes" selector="{{AdminLoginToRiskifiedSection.RiskifiedEnabled}}" stepKey="seeRiskifiedEnabled"/>

        <click selector="{{AdminLoginToRiskifiedSection.SaveConfiguration}}" stepKey="ClickOnSaveConfig"/>
        <waitForPageLoad stepKey="waitForSaveConfig"/>

        <seeElement selector="{{AdminLoginToRiskifiedSection.SavedConfiguration}}" stepKey="checkConfigurationSaved"/>
    </actionGroup>
</actionGroups>


