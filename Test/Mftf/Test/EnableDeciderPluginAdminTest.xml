<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="EnableDeciderPluginAdminTest">
        <annotations>
            <features value="Riskified"/>
            <stories value="Test API Riskified credenials"/>
            <title value="Test API Riskified credenials"/>
            <description value="Riskified Decider"/>
            <severity value="AVERAGE"/>
            <group value="riskified"/>
        </annotations>

        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <amOnPage url="admin/admin/system_config/edit/section/riskified" stepKey="navigateToDeciderConfigurationOnDefaultStoreView" />
        </before>

        <after>
            <amOnPage url="{{AdminLogoutPage.url}}" stepKey="amOnLogoutPage"/>
        </after>

        <actionGroup ref="EnableRiskifiedPluginInSystemConfiguration" stepKey="enableRiskifiedPluginInSystemConfiguration"/>
    </test>
</tests>
