<?xml version="1.0" encoding="UTF-8"?>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontCreateCreditmemoDeciderTest" extends="StorefrontApproveCustomerCreateOrderDeciderTest">
        <annotations>
            <stories value="Create creditmemo for decider plugin"/>
            <description value="Verify admin was able to create creditmemo with decider module"/>
            <severity value="AVERAGE"/>
            <group value="riskified"/>
        </annotations>
        <before>
            <actionGroup ref="ChangeRiskifiedAutoInvoiceConfigurationActionGroup" stepKey="enableAutoInvoice" after="loginAsAdmin">
                <argument name="option" value="1"/>
            </actionGroup>
        </before>
        <after>
            <actionGroup ref="ChangeRiskifiedAutoInvoiceConfigurationActionGroup" stepKey="disableAutoInvoice" before="logoutFromAdminArea">
                <argument name="option" value="0"/>
            </actionGroup>
        </after>

        <!-- Create shipping -->
        <click selector="{{AdminOrderDetailsMainActionsSection.ship}}" stepKey="clickShipAction" after="openOrder"/>
        <click selector="{{AdminShipmentMainActionsSection.submitShipment}}" stepKey="clickSubmitShipment"/>
        <see selector="{{AdminOrderDetailsMessagesSection.successMessage}}" userInput="The shipment has been created." stepKey="checkShipmentSuccessMessage"/>

        <!-- Verify that your Order got status "Approved (Riskified)" -->
        <actionGroup ref="CheckRiskifiedOrderStatusActionGroup" stepKey="checkRiskifiedStatus" after="checkShipmentSuccessMessage">
            <argument name="statusNote" value="Reviewed and approved by Riskified"/>
        </actionGroup>

        <!-- Click 'Credit Memo' button and fill data from dataset: refund -->
        <actionGroup ref="AdminOpenAndFillCreditMemoRefundActionGroup" stepKey="fillCreditMemoRefund">
            <argument name="itemQtyToRefund" value="5"/>
            <argument name="shippingRefund" value="25"/>
            <argument name="adjustmentRefund" value="98"/>
            <argument name="adjustmentFee" value="0"/>
        </actionGroup>

        <!-- On order's page click 'Refund offline' button -->
        <click selector="{{AdminCreditMemoTotalSection.submitRefundOffline}}" stepKey="clickRefundOffline"/>
        <waitForPageLoad stepKey="waitForResultPage"/>

        <!-- Perform all assertions: assert refund success create message -->
        <see selector="{{AdminIndexManagementSection.successMessage}}" userInput="You created the credit memo." stepKey="assertRefundSuccessCreateMessage"/>
    </test>
</tests>
